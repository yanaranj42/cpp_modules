#COLORS
RED = \e[1;91m
GREEN = \e[1;92m

SRC = Contact.cpp PhoneBook.cpp main.cpp
CC = c++
CFLAGS = -Wall -Werror -Wextra -std=c++98
RM = rm -f
OBJ = $(SRC:.cpp=.o)

HEADER = Contact.hpp PhoneBook.hpp Makefile

NAME = phonebook

all: $(NAME)

$(NAME): $(OBJ) $(HEADER)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "$(GREEN)PhoneBook Doneâœ…"

clean:
	@$(RM) $(OBJ)
	@echo "$(RED)objects had been removed"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(RED)phonebook has been removed"

re: fclean all

.PHONY: all clean fclean re